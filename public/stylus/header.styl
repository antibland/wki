header {
  background-color: $blue;
  display: flex;
}

.logo {
  flex: 0 0 150px;
  padding: 1em 0;

  > img {
    display: block;
    margin: 0 auto;
  }
}

nav
  flex: 1;
  display: flex;
  margin: 0 2em 0 0.5em;
  ul
    display: flex;
    flex: 1;
  li
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;

    &:first-child > a
      border-radius: 0.35em 0 0 0.35em;

    &:last-child > a
      border-radius: 0 0.35em 0.35em 0;
  a
    width: 100%;
    display: block;
    white-space: nowrap;
    text-decoration: none;
    background-color: white;
    padding: 0.75em;
    text-align: center;
    text-transform: uppercase;
    font-size: 1em;
    color: black;
    transition: 0.3s;
    border-right: 1px solid $blue;

    &:hover,
    &:focus
      background-color: lighten(#0097de, 80%);

