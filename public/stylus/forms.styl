form
  width: 100%;

.form-row
  display: block;
  width: 100%;

.form-item
  transition: 0.2s;
  display: inline-block;
  width: 50%;
  padding-top: 0.5em;
  padding-bottom: 0.5em;

  @media only screen and (max-width: $tablet)
    width: 100%;

  &:first-child
    padding-right: 3em;

    @media only screen and (max-width: $tablet)
      padding-right: 0;

label
  cursor: pointer;
  margin-bottom: 0.25em;
  display: inline-block;
  width: 100%;

  &[aria-required=true]
    &:after
      content: 'required';
      color: red;
      float: right;

[type=text],
[type=email],
[type=tel],
[type=password],
textarea
  font-size: 1.5rem;
  padding: 0.5em 0.75em;

[type=text],
[type=email],
[type=tel],
textarea
  outline: none;

  &:focus
    border: 1px solid gray;

[type=text],
[type=email],
[type=tel],
[type=password],
textarea
  border-radius: 0.5em;
  border: 1px solid lightgray;
  display: block;
  width: 100%;
  position: relative;
  top: -2px;

  &.placeholder {
    color: lightgray;
  }
  &:-moz-placeholder {
    color: lightgray;
  }
  &::-moz-placeholder {
    color: lightgray;
  }
  &:-ms-input-placeholder {
    color: lightgray;
  }
  &::-webkit-input-placeholder {
    color: lightgray;
  }

[id='name'],
[type=email],
[type=tel],
[id='reason']
  background-repeat: no-repeat;
  background-position-y: 50%;
  padding-left: 1.7em;

[id='name']
  background-size: 16px 16px;
  background-position-x: 4px;
  background-image-retina('/images/icons/user', png, 16px, 16px);

[type=email]
  background-size: 16px 16px;
  background-position-x: 5px;
  background-image-retina('/images/icons/email', png, 16px, 16px);

[type=tel]
  background-size: 18px 18px;
  background-position-x: 6px;
  background-image-retina('/images/icons/phone', png, 18px, 18px);

[id='reason']
  background-size: 11px 18px;
  background-position-x: 8px;
  background-image-retina('/images/icons/bulb', png, 11px, 18px);

#dismiss-message
  transition: 0.3s;
  position: absolute;
  top: 1em;
  transform: translateX(-50%);
  left: 50%;
  background-color: white;
  padding: 1em;
  box-shadow: 0px 0px 12px 2px rgba(0,0,0,0.5);
  z-index: 10;

  a
    text-decoration: none;
    color: black;

  p
    margin-bottom: 0;

  &:target
    top: -20em;
