@import 'reset.styl';
@import 'variables.styl';
@import 'animations.styl';

* {
  box-sizing: border-box;

  &:before, &:after {
    box-sizing: border-box;
  }
}

html {
  min-height: 100%;
  position: relative;
}

body {
  background: transparent url(/images/bg.jpg) 0 0 repeat;
  margin: 0 0 1em;
  border-top: 5px solid $blue;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
}

header, nav {
  display: inline-block;
}


header {
  width: 200px;
  min-height: 8em;
}

main {

}

footer {
  position: absolute;
  bottom: 0;
  min-height: 1em;
  padding: 1em;
  text-align: center;
  width: 100%;
}

nav {
  width: calc(100% - 200px);

  ul {
    width: 100%;
    position: relative;
    top: -0.85em;
    perspective: 20em;
  }

  li {
    transition: 0.3s box-shadow;
    position: absolute;
    min-width: 10em;
    transform: rotateZ(90deg);
    top: 0;
    left: 0;
    box-shadow: 2px 0 1px 0 rgba(0,0,0,0.3);
    transform-origin: 0 0;
    animation: swing 1.5s ease-in-out infinite alternate;

    &:hover,
    &:focus,
    &.active {
    }

    &:nth-child(2) {
      animation-delay: 0.8s;
      left: 3.05em;
    }

    &:nth-child(3) {
      animation-delay: 0.5s;
      left: 6.1em;
    }

    &:nth-child(4) {
      animation-delay: 0.6s;
      left: 9.16em;
    }

    &:nth-child(5) {
      animation-delay: 0.2s;
      left: 12.22em;
    }
  }

  a {
    display: block;
    text-decoration: none;
    white-space: nowrap;
    background-color: white;
    padding: 1em;
    letter-spacing: 1px;
    text-align: center;
    text-transform: uppercase;
    font-size: 1em;
    color: black;
    transition: 0.3s;

    &:hover,
    &:focus {
      background-color: $blue;
      color: white;
    }
  }
}

h1 {
  font-size: 3rem;
}

p {
  color: red;
  font-weight: bold;
}
