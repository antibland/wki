@import 'reset.styl';
@import 'variables.styl';
@import 'mixins.styl';
@import 'forms.styl';
@import 'header.styl';
@import 'nav.styl';
@import 'hamburger.styl';
@import 'animations.styl';
@import 'map.styl';
@import 'promo-poup.styl';
@import 'login.styl';
@import 'admin-promo.styl';

* {
  box-sizing: border-box;

  &:before, &:after {
    box-sizing: border-box;
  }
}

html {
  font-size: 62.5%;
  height: 100%;
}

body {
  background: rgba(0,0,0,.2);
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
  font-size: 1.4em;
  height: 100%;
}

sup {
  vertical-align: super;
  font-size: 1.3rem;
}

h2 sup {
  font-size: 50%;
}

h1, h2, h3 {
  margin-bottom: 0.5em;
  transition: 0.3s;
}

h1, h2
  @media only screen and (max-width: $mobile-small)
    margin-bottom: 7% !important;

h1 {
  text-shadow: $header-text-shadow;
  font-size: 6rem;
  line-height: 6rem;
  margin-bottom: 4.5rem;

  @media only screen and (max-width: $mobile-small) {
    font-size: 4rem;
    line-height: 4rem;
  }
}

h2
  font-size: 2.6rem;
  margin-bottom: 3rem;

  @media only screen and (max-width: $mobile-small)
    font-size: 2.5rem !important;
    line-height: 2.5rem !important;

  .contact-us &
    text-shadow: $header-text-shadow;
    margin: 0;
    padding: 1em 1em 0.75em;

.contact-us .lead h2
  padding-top: 0;

h3
  font-size: 2.2rem;

main
  min-height: $min-content-height;

  ul
    padding-left: 3em;
    margin-bottom: 3em;
    list-style: none;

    @media only screen and (max-width: $mobile-small)
      padding-left: 1em;


p, main li {
  font-size: 1.6rem;
  margin-bottom: 1em;
  line-height: 1.8em;
  letter-spacing: 0.05em;
  word-spacing: 0.05em;

  footer & {
    font-size: 1.5rem;
  }
}

.list-as-content
  margin 0;
  padding: 1em 0.5em 0;
  background: lighten(#eee, 10%);

  &.side-by-side
    display: flex;
    flex-wrap: wrap;

    span
      text-align: center;

    a
      flex: 1 0 auto;
      border: none;
      outline: none;
      align-items: flex-end;
      display: flex;
      align-items: center;
      margin-bottom: 1em;

      &:focus,
      &:hover
        .thumbnail
          transform: scale(1.01);
          box-shadow: 0 5px 10px rgba(0,0,0,.3);

    li
      display: flex;
      transition: 0.3s ease-in-out;
      width: calc(100%/3);
      padding: 1em;
      margin-bottom: 0;

      @media only screen and (max-width: $tablet)
        width: 50%;

      @media only screen and (max-width: $mobile-small)
        width: 100%;
        margin-bottom: 3em;

    .list-content
      display: flex;
      flex-direction: column;
      width: 100%;

    .list-item-title
      font-size: 1.8rem !important;
      text-align: center;

  .thumbnail
    transition: 0.3s ease-in-out;
    width: 100%;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid #ccc;

.the-lab section p:first-child:first-letter
  font-size: 3.4rem;

section
  position: relative;

  &.no-slant,
  &:last-child
    .inner
      padding-bottom: 8em;
    &:after
      content: normal;
      display: none;
      background: transparent;

  &.no-slant .inner
    padding-bottom: 3em;

  &:after
    content: '';
    display: block;
    width: 100%;
    height: 3rem;
    position: absolute;
    bottom: -1rem;

  &.featured
    background-color: white !important;
    background-image: none !important;

  &:nth-child(odd)
    background-color: $lighter-gray;
    background-image-retina('/images/weave', png, 60px, 60px);
    background-repeat: repeat;

    &:after
      background: white;
      transform: rotateZ(0.5deg);

  &:nth-child(even)
    background: white;
    &:after
      background-color: $lighter-gray;
      background-image-retina('/images/weave', png, 60px, 60px);
      background-repeat: repeat;
      transform: rotateZ(-0.5deg);

  &.lead
    h1, h2, p
      color: white;
    h1, h2, p
      text-shadow: $default-text-shadow;
    h2
      font-size: 3.5rem;
      line-height: 3.5rem;
      padding-left: 0;
    p
      font-size: 1.9rem;
      line-height: 1.4em;

    .index & a
      font-weight: bold;
      color: white;
      border-bottom-color: white;

    +landing-page-image('index', '/images/howard_surgery')
      background-size: 1400px 800px;
      background-position: 50% 0;
      background-color: rgba(0, 0, 0, 0.8);

      p:last-child
        margin-bottom: 11.3em;

      @media only screen and (max-width: $jumbo)
        background-size: auto 800px;

      @media only screen and (max-width: $mobile)
        background-size: auto 100%;

        p:last-child
          margin-bottom: 1em;

    +landing-page-image('itero', '/images/services/itero/landing', 0.2)
      background-size: 100% 800px;
      background-position: 50% 35%;

      @media only screen and (max-width: $jumbo)
        background-size: auto 800px;

      @media only screen and (max-width: $mobile)
        background-size: 100% 100%;

    +landing-page-image('featured-promotion', '/images/services/itero/landing', 0.1)
      background-size: 100% 800px;
      background-position: 50% 35%;

      @media only screen and (max-width: $jumbo)
        background-size: auto 800px;

      @media only screen and (max-width: $mobile)
        background-size: 100% 100%;


    +landing-page-image('contact-us', '/images/contact_us/landing')
      background-size: 100% 800px;
      background-position: 50% 70%;

      @media only screen and (max-width: $jumbo)
        background-size: auto 800px;

      @media only screen and (max-width: $mobile)
        background-size: 100% 100%;

    +landing-page-image('shipping-instructions', '/images/resources/shipping_instructions/landing', 0.1)
      background-size: 100% 800px;
      background-position: 20% 20%;

      @media only screen and (max-width: $jumbo)
        background-size: auto 800px;

      @media only screen and (max-width: $mobile)
        background-size: 100% 100%;

      @media only screen and (max-width: $mobile-small)
        background-size: auto 100%;

    +landing-page-image('the-lab', '/images/the_lab/landing')
      background-size: 100% 800px;
      background-position: 50% 45%;

      @media only screen and (max-width: $tablet)
        background-size: auto 800px;

      @media only screen and (max-width: $mobile-xsmall)
        background-size: 100% 100%;

  a:link,
  a:visited
    color: darken($peach, 30%);
    text-decoration: none;
    border-bottom: 1px solid;

  a.black-link {
    color: black;
  }

  .inner
    padding: 2.5em 3em 5em;
    line-height: 2.5rem;
    max-width: 64em;
    margin: 0 auto;

    @media only screen and (max-width: $mobile)
     padding-right: 1.5em;
     padding-left: 1.5em;

    &.full
      padding: 0 !important
      max-width: 100%;

    &:first-child
      padding-top: 3.5em;

footer
  border-top: 1px solid lighten($peach, 10%);
  background: $blue;
  position: absolute;
  bottom: 0;
  padding: 1em 0 0;
  text-align: center;
  width: 100%;
  color: white;

  .technique-books & {
    position: relative;
    padding: 1em 0 0.1em;
  }

.container
  min-height: 100%;
  position: relative;
  max-width: 85em;
  display: block;
  box-shadow: 0 0 32px 8px rgba(0,0,0,0.3);
  margin: 0 auto;
  background-color: white;

  &.show-promotion {
    margin-bottom: 20rem;
  }

  .close-popup & {
    margin-bottom: 0;
  }

.box-content
  box-shadow: $default-bottom-shadow;
  padding: 1em;
  background: white;
  position: relative;
  text-align: center;
  margin-bottom: 4em;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 0.45em;

  .featured &
    padding-top: 7em;

    address
      font-weight: bold;
      font-size: 1.2em;

    .box-content-image
      max-width: 372px;
      box-shadow: none;
      margin: 0 0 1em;
    h5
      font-size: 2.9rem;
      margin-bottom: 0.5em;

  &:last-child
    margin-bottom: 0;

  &> div
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding-top: 6em;

    @media only screen and (max-width: $mobile)
      flex-wrap: wrap;

&.full-width
  &> div
    flex-wrap: wrap;
  .box-content-image, picture
    margin: 0 auto 1em;
    flex: auto;
    width: 100%;
  .box-content-description
    padding-right: 0;

@media all and (-ms-high-contrast:none)
  *::-ms-backdrop .box-content-image
    width: auto !important;

picture,
.box-content-image
  margin: 0 1em 0 0;
  flex: 0 0 331px;
  max-width: 100%;
  height: auto;

.box-content-image
  box-shadow: $default-bottom-shadow;

  @media only screen and (max-width: $mobile)
    margin: 0 auto 1em;
    width: 100%;
    flex: auto;

.box-content-description
  text-align: left;
  margin: 0;
  max-height: 230px;
  overflow: auto;
  padding-right: 0.75em;
  padding-bottom: 0.5em;
  line-height: 1.85em;
  -webkit-overflow-scrolling: touch;

  &.taller
    max-height: 400px;

  > span
    display: block;
    margin-bottom: 1em;
    &:last-child
      margin-bottom: 0;

  &.with-scroll
    -webkit-mask-image: -webkit-gradient(
      linear,
      left 90%,
      left bottom,
      from(rgba(0,0,0,1)),
      to(rgba(0,0,0,0))
    )

  @media only screen and (max-width: $mobile)
    padding-right: 0;

.box-content-header
  position: relative;
  top: -1.5em;
  text-align: center;
  background: $blue;
  color: white;
  display: block;
  padding: 0.25em;
  font-size: 1.8rem;
  line-height: 1.8rem;
  font-weight: normal;
  margin: 0 auto;
  max-width: 80%;
  letter-spacing: 2px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.65);
  box-shadow: $default-bottom-shadow;

.call-to-action-button,
.button
  background: $peach;
  transition: 0.2s;
  border-radius: 1.5rem;
  border: none;
  color: rgba(black, 0.8) !important;
  font-size: 1.4em;
  line-height: 1.8rem;
  padding: 0.5em;
  text-decoration: none;
  cursor: pointer;
  margin: 1em auto;
  display: block;
  text-align: center;
  width: 8em;
  outline: none;
  white-space: nowrap;
  text-decoration: none;
  appearance: none;
  border-bottom: none !important;

  @media only screen and (max-width: $mobile)
    font-size: 1.2em;

  &.large
    font-size: 1.6em;

  &:hover,
  &:focus,
  &:active
    box-shadow: 0 2px 3px rgba(0,0,0,0.3);
    background: darken($peach, 10%);
    color: black !important;

.ribbon-container
  display: inline-block;
  line-height: 1;
  position: absolute;
  left: 0;
  top: 2.5em;

  @media only screen and (max-width: $mobile-small)
    top: 2.9em

  .featured &
    top: 4.8em;

  img
    vertical-align: middle;

  .ribbon
    background-color: $blue;
    text-transform: capitalize;
    font-size: 1.8rem;
    position: absolute;
    bottom: 0;
    left: 0;
    letter-spacing: 1px;
    margin-right: 1em;
    padding: 0.75em 1.25em 0.75em 0.75em;
    border-radius: 0 0.45em 0.45em 0;
    background-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,.1) 100%);
    box-shadow: inset 0 .062em 0 rgba(255,255,255,.6), 0 .125em .25em rgba(0,0,0,.2);
    color: #fff;
    text-shadow: 0 -.062em 0 rgba(0,0,0,.2);
    white-space: nowrap;

    &:before,
    &:after
      position: absolute;
      background-color: inherit;
      content: "";

    &:before
      bottom: 0;
      left: -.5em;
      width: .5em;
      height: 3em;
      border-radius: 0 0 0 .5em;
      background-image: linear-gradient(to right, rgba(0,0,0,.2) 0%, rgba(0,0,0,0) 100%);

    &:after
      top: -1em;
      left: -.5em;
      width: .5em;
      height: 1em;
      border-radius: 0.55em 0 0 0.55em;
      background-image: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,.2) 100%);
      box-shadow: 0 .062em 0 rgba(255,255,255,.6);

.zero-bottom-margin
  margin-bottom: 0 !important;

.featured-header
  text-shadow: $header-text-shadow;
  border-top: 1px solid lighten($peach, 10%);
  background: rgba(0,0,0,0.8);
  text-shadow: 1px 4px 3px rgba(0,0,0,.15);
  color: #fff;
  font-size: 1.6rem;
  font-weight: 500;
  padding: .8em 1em;
  text-align: center;
  letter-spacing: .1em;
  margin-bottom: 0;
  position: relative;
  text-transform: uppercase;

  @media only screen and (max-width: $mobile-small)
    font-size: 1.7rem;

  &:after
    position: absolute;
    top: 0;
    content: '';
    display: block;
    box-shadow: 0 8px 4px -4px rgba(0,0,0,.3);
    height: 2.6em;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;

.center
  text-align: center;

.lab-photos-container
  padding: 0.5em 0.25em 4em;

figcaption
  font-style: italic;
  text-align: center;
  font-size: 1.6rem;

figure
  transition: 0.3s width;
  display: inline-block;
  vertical-align: top;
  width: 33.333%;
  padding: 0 0.25em 0.5em;

  @media only screen and (max-width: $tablet)
    width: 50%;

  @media only screen and (max-width: $mobile)
    width: 100%;

  img
    display: block;
    width: 100%;
