@import 'reset.styl';
@import 'variables.styl';
@import 'header.styl';
@import 'nav.styl';
@import 'hamburger.styl';
@import 'animations.styl';

* {
  box-sizing: border-box;

  &:before, &:after {
    box-sizing: border-box;
  }
}

html {
  font-size: 62.5%;
  height: 100%;
}

body {
  background: white;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
  font-size: 1.4rem;
  height: 100%;
}

sup {
  vertical-align: super;
  font-size: 1.3rem;
}

h1, h2, h3 {
  margin-bottom: 0.5em;
}

h1 {
  font-size: 6rem;
  line-height: 6rem;
  margin-bottom: 4.5rem;
}

h2 {
  font-size: 2.6rem;
  margin-bottom: 3rem;
}

h3 {
  font-size: 2.2rem;
}

p {
  font-size: 2rem;
  margin-bottom: 1em;
  line-height: 1.5em;

  footer & {
    font-size: 1.5rem;
  }
}

section
  position: relative;

  &:last-child
    .inner
      padding-bottom: 8em;
    &:after
      content: normal;
      display: none;
      background: transparent;

  &:after
    content: '';
    display: block;
    width: 100%;
    height: 3rem;
    position: absolute;
    bottom: -1rem;

  &:nth-child(odd)
    background: $lighter-gray;
    &:after
      background: white;
      transform: rotateZ(0.5deg);

  &:nth-child(even)
    background: white;
    &:after
      background: $lighter-gray;
      transform: rotateZ(-0.5deg);

  &.lead
    h1, h2, p
      color: white;
    h1, h2
      text-shadow: $default-text-shadow;
    h2
      font-size: 3.5rem;
      line-height: 3.5rem;

    background:
      linear-gradient(
        rgba(0, 0, 0, 0.28),
        rgba(0, 0, 0, 0.28)
      ),
      url(/images/howard_surgery.jpg) no-repeat;
    background-size: 100% 800px;
    background-position: 50% 0;

    @media only screen and (max-width: $jumbo)
      background-size: auto 800px;

    @media only screen and (max-width: $mobile)
      background-size: auto 100%;

    @media only screen and (max-width: $mobile-small)
      height: 800px;

    .inner
      padding-top: 5em;

      @media only screen and (max-width: $mobile)
        padding-top: 3.5em;
        padding-right: 1.5em;
        padding-left: 1.5em;

  a:link,
  a:visited
    color: $peach;

  .inner
    padding: 3.5em 3em 5em;
    line-height: 2.5rem;
    max-width: 68.55em;
    margin: 0 auto;

footer {
  position: absolute;
  bottom: 0;
  height: 3.7em;
  padding: 1em;
  text-align: center;
  width: 100%;
  background: $blue;
  color: white;
}

.container {
  min-height: 100%;
  position: relative;
  max-width: 100%;
  display: block;
}

.box-content
  box-shadow: $default-bottom-shadow;
  padding: 1em;
  background: white;
  position: relative;
  text-align: center;
  margin-bottom: 4em;

  &:last-child
    margin-bottom: 0;

  &> div
    display: flex;
    flex-direction: row;
    margin-bottom: 2em;
    justify-content: center;
    align-items: flex-start;

    @media only screen and (max-width: $mobile)
      flex-wrap: wrap;

.box-content-image
  box-shadow: $default-bottom-shadow;
  margin: 0 1em 0 0;
  flex: 0 0 331px;
  max-width: 100%;
  width: 100%;
  height: auto;

  @media only screen and (max-width: $mobile)
    margin: 0 auto 1em;

.box-content-description
  text-align: left;
  margin: 0;
  max-height: 220px;
  overflow: auto;
  padding-right: 0.75em;
  padding-bottom: 0.5em;
  line-height: 1.55em;
  -webkit-overflow-scrolling: touch;

  &.with-scroll
    -webkit-mask-image: -webkit-gradient(
      linear,
      left 90%,
      left bottom,
      from(rgba(0,0,0,1)),
      to(rgba(0,0,0,0))
    )

  @media only screen and (max-width: $mobile)
    padding-right: 0;

.box-content-header
  position: relative;
  top: -1.5em;
  text-align: center;
  background: $blue;
  color: white;
  display: block;
  padding: 0.25em;
  font-size: 1.8rem;
  line-height: 1.8rem;
  font-weight: normal;
  margin: 0 auto;
  max-width: 80%;
  letter-spacing: 2px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.65);
  box-shadow: $default-bottom-shadow;

.box-content-button-container
  display: block;
  clear: left;
  margin: 5em 0 1em;


.box-content-button
  transition: 0.2s;
  background: $peach;
  box-shadow: 0 6px 3px -3px rgba(0,0,0,0.2);
  border-radius: 1.5rem;
  color: rgba(black, 0.8) !important;
  font-size: 1.8rem;
  line-height: 1.8rem;
  padding: 1rem;
  text-decoration: none;
  cursor: pointer;
  margin: 0 auto 1em;
  display: block;
  text-align: center;
  width: 8em;
  outline: none;
  white-space: nowrap;
  text-decoration: none;

  &:hover,
  &:focus,
  &:active
    width: 8.3em;
    box-shadow: 0 0 3px -3px rgba(0,0,0,0.2);
