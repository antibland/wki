@import 'reset.styl';
@import 'variables.styl';
@import 'header.styl';
@import 'nav.styl';
@import 'hamburger.styl';
@import 'animations.styl';

* {
  box-sizing: border-box;

  &:before, &:after {
    box-sizing: border-box;
  }
}

html {
  font-size: 62.5%;
  height: 100%;
}

body {
  background: transparent url(/images/bg.jpg) 0 0 repeat;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
  font-size: 1.4rem;
  height: 100%;
}

h1, h2, h3 {
  margin-bottom: 0.5em;
}

h1 {
  font-size: 3rem;
}

h2 {
  font-size: 2.6rem;
}

h3 {
  font-size: 2.2rem;
}

p {
  font-size: 1.8rem;
  margin-bottom: 1em;

  footer & {
    font-size: 1.5rem;
  }
}

main {
  padding: 3em 2em;
  line-height: 2.5rem;
  max-width: 68.55em;
  margin: 0 auto;
}

footer {
  position: absolute;
  bottom: 0;
  height: 3.5em;
  padding: 1em;
  text-align: center;
  width: 100%;
}

.container {
  min-height: 100%;
  position: relative;
  max-width: 100%;
  display: block;
}
