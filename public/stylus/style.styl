@import 'reset.styl';
@import 'variables.styl';
@import 'header.styl';
@import 'nav.styl';
@import 'hamburger.styl';
@import 'animations.styl';

* {
  box-sizing: border-box;

  &:before, &:after {
    box-sizing: border-box;
  }
}

html {
  font-size: 62.5%;
  height: 100%;
}

body {
  background: white;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
  font-size: 1.4rem;
  height: 100%;
}

h1, h2, h3 {
  margin-bottom: 0.5em;
}

h1 {
  font-size: 6rem;
  line-height: 6rem;
  margin-bottom: 4.5rem;
}

h2 {
  font-size: 2.6rem;
  margin-bottom: 3rem;
}

h3 {
  font-size: 2.2rem;
}

p {
  font-size: 2rem;
  margin-bottom: 1em;
  line-height: 1.5em;

  footer & {
    font-size: 1.5rem;
  }
}

section
  position: relative;

  &:last-child
    .inner
      padding-bottom: 8em;
    &:after
      content: normal;
      display: none;
      background: transparent;

  &:after
    content: '';
    display: block;
    width: 100%;
    height: 3rem;
    position: absolute;
    bottom: -1rem;

  &:nth-child(odd)
    background: beige;
    &:after
      background: white;
      transform: rotateZ(0.5deg);

  &:nth-child(even)
    background: white;
    &:after
      background: beige;
      transform: rotateZ(-0.5deg);

  &.lead
    background: rgba(black, 0.5);
    padding-bottom: 3rem;

    h1, h2, p
      color: white;
    h2
      font-size: 3.5rem;
      line-height: 3.5rem;

    .inner
      padding-top: 5.5em;

  .inner
    padding: 3.5em 3em 5em;
    line-height: 2.5rem;
    max-width: 68.55em;
    margin: 0 auto;

main
  .index &
    background: url(/images/cameras@2x.jpg) 0 0 no-repeat;
    background-size: cover;

footer {
  position: absolute;
  bottom: 0;
  height: 3.7em;
  padding: 1em;
  text-align: center;
  width: 100%;
  background: $blue;
  color: white;
}

.container {
  min-height: 100%;
  position: relative;
  max-width: 100%;
  display: block;
}
