@import 'reset.styl';
@import 'variables.styl';
@import 'navigation.styl';
@import 'animations.styl';

* {
  box-sizing: border-box;

  &:before, &:after {
    box-sizing: border-box;
  }
}

html {
  min-height: 100%;
  position: relative;
}

body {
  background: transparent url(/images/bg.jpg) 0 0 repeat;
  margin: 0 0 1em;
  border-top: 5px solid $blue;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
}

header, nav {
  display: inline-block;
  vertical-align: top;
}


header {
  width: 200px;
  min-height: 15em;
}

main {

}

footer {
  position: absolute;
  bottom: 0;
  min-height: 1em;
  padding: 1em;
  text-align: center;
  width: 100%;
}

h1 {
  font-size: 3rem;
}

p {
  color: red;
  font-weight: bold;
}
